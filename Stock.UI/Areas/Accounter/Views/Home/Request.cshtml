@using Stock.UI.Code;


<div id="divAccounters">
</div>
<input type="hidden" value="@Repo.Session.UserId" id="inputUserId"></input>

<!--Kaydetme-->
<div class="modal fade" id="accounterModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Yeni accounter Ekle</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input type="hidden" id="inputUserfullName" class="form-control" name="accounterfullName" value="@Repo.Session.UserId" />

                @*     <label for="inputDepartmentName" class="form-label">Departman</label>
                <select type="text" id="inputDepartmentName" class="form-control">
                <option value="" disabled selected>Departman Seçiniz</option>
                </select> *@
                <label for="inputCategoryName" class="form-label">Kategori</label>
                <select type="text" id="inputCategoryName" class="form-control">
                    <option value="" disabled selected>Kategori Seçiniz</option>
                </select>

                <label for="inputProductName" class="form-label">Ürün</label>
                <select type="text" id="inputProductName" class="form-control">
                    <option value="" disabled selected>Ürün Seçiniz</option>
                </select>

                <label for="inputAmount" class="form-label">Adet</label>
                <input type="text" id="inputAmount" class="form-control" name="inputAmount" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button onclick="Saveaccounter()" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

<!--Düzenleme-->
<div class="modal fade" id="accounterEditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="accounterEditForm">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">accounter Düzenle</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <label for="inputEditaccounterName" class="form-label">accounter Adı-Soyadı</label>
                    <input type="text" id="inputEditaccounterfullName" class="form-control" name="accounterEditfullName" />
                    <label for="inputEditaccounterEmail" class="form-label">accounter Email</label>
                    <input type="text" id="inputEditaccounterEmail" class="form-control" name="accounterEditEmail" />
                    <label for="inputaccounterPassword" class="form-label">accounter Şifre</label>
                    <input type="text" id="inputEditaccounterPassword" class="form-control" name="accounterEditPassword" />

                    <label for="inputEditCompanyName" class="form-label">Şirket</label>
                    <select type="text" id="inputEditCompanyName" class="form-control">
                        <option value="" disabled selected>Şirket Seçiniz</option>
                    </select>

                    <label for="inputEditCompanyDepartmentName" class="form-label">Şirket</label>
                    <select type="text" id="inputEditCompanyDepartmentName" class="form-control">
                        <option value="" disabled selected>Departman Seçiniz</option>
                    </select>

                    <label for="inputEditRole" class="form-label">Rol</label>
                    <select type="text" id="inputEditRole" class="form-control">
                        <option value="" disabled selected>Rol Seçiniz</option>
                    </select>
                    <label for="inputEditSuperiorName" class="form-label">Amir</label>
                    <select type="text" id="inputEditSuperiorName" class="form-control">
                        <option value="" disabled selected>Amir Seçiniz</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
</div>
