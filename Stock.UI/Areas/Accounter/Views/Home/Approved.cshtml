@using Stock.UI.Code;


<div id="divOfferApproved">
</div>
<input type="hidden" value="@Repo.Session.UserId" id="inputUserId"></input>
<!--Kaydetme-->
<div class="modal fade" id="billModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="billForm">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Yeni Fatura</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <label for="inputSupplierName" class="form-label">Tedarikçi Şirket</label>
                    <select type="text" id="inputSupplierName" class="form-control">
                        <option value="" disabled selected>Şirket Seçiniz</option>
                    </select>

                    <label for="inputCategoryName" class="form-label">Kategori</label>
                    <select type="text" id="inputCategoryName" class="form-control">
                        <option value="" disabled selected>Kategori Seçiniz</option>
                    </select>
                    <label for="inputProductName" class="form-label">Ürün</label>
                    <select type="text" id="inputProductName" class="form-control">
                        <option value="" disabled selected>Ürün Seçiniz</option>
                    </select>

                    <label for="inputAmount" class="form-label">Adet</label>
                    <input type="text" id="inputAmount" class="form-control" name="inputAmount" />

                    <label for="inputPrice" class="form-label">Fiyat</label>
                    <input type="text" id="inputPrice" class="form-control" name="inputPrice" />

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/accounter/accounter.js"></script>

