<!--Kaydetme-->
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="userForm">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Yeni Personel Ekle</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <label for="inputuserName" class="form-label">Personel Adı-Soyadı</label>
                    <input type="text" id="inputuserfullName" class="form-control" name="userfullName" />

                    <label for="inputuserEmail" class="form-label">Personel Email</label>
                    <input type="text" id="inputuserEmail" class="form-control" name="userEmail" />

                    <label for="inputuserPassword" class="form-label">Personel Şifre</label>
                    <input type="text" id="inputuserPassword" class="form-control" name="userPassword" />

                    <label for="inputCompanyName" class="form-label">Şirket</label>
                    <select type="text" id="inputCompanyName" class="form-control">
                        <option value="" disabled selected>Şirket Seçiniz</option>
                    </select>

                    <label for="inputCompanyDepartmentName" class="form-label">Departman</label>
                    <select type="text" id="inputCompanyDepartmentName" class="form-control">
                        <option value="" disabled selected>Departman Seçiniz</option>
                    </select>

                    <label for="inputRole" class="form-label">Rol</label>
                    <select type="text" id="inputRole" class="form-control">
                        <option value="" disabled selected>Rol Seçiniz</option>
                    </select>

                    <label for="inputSuperiorName" class="form-label">Amir</label>
                    <select type="text" id="inputSuperiorName" class="form-control">
                        <option value="" disabled selected>Amir Seçiniz</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

