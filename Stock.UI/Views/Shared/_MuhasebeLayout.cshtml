@using Stock.UI.Code;
@using Stock.UI.Code;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>Muhasebe</title>

    <!-- Font Awesome Icons -->
    <link href="\admin\plugins\fontawesome-free\css\all.css" rel="stylesheet" />
    <link href="\admin\plugins\fontawesome-free\css\all.css" rel="stylesheet" />
    <link href="\admin\plugins\fontawesome-free\css\all.min.css" rel="stylesheet" />
    <!-- IonIcons -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <script src="\admin\plugins\jquery\jquery.min.js"></script>
    <!-- Theme style -->

    <link href="\admin\dist\css\adminlte.css" rel="stylesheet" />
    <link href="\admin\dist\css\adminlte.min.css" rel="stylesheet" />

    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body>

    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>

            </ul>



            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Messages Dropdown Menu -->
                <li class="nav-item dropdown">

                <li> <a class="dropdown-item" id="logoutLink" href="#">Çıkış</a></li>
                </li>

            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="\personel\dist\img\adminltelogo.png" class="brand-image img-circle elevation-3"
                     style="opacity: .8" />
                <span class="brand-text font-weight-light">Muhasebe Ekranı</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="info">

                        <input type="text" value="@Repo.Session.UserFullName" id="inputUserFullName"></input>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item  menu-open">

                     


                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-table"></i>
                                <p>
                                    Talepler
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Accounter" asp-controller="Home" asp-action="Approved">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Onaylanan Teklifler</p>
                                    </a>
                                </li>

                            </ul>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-table"></i>
                                <p>
                                    Faturalar
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Accounter" asp-controller="Home" asp-action="Bill">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Faturalar</p>
                                    </a>
                                </li>

                            </ul>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <main>
                @RenderBody()
            </main>
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>

        <!-- Main Footer -->
        <footer class="main-footer">
        </footer>
    </div>
    <script>
        document.getElementById("logoutLink").addEventListener("click", function (event) {
            event.preventDefault(); // Bağlantının varsayılan davranışını engelle
            // Oturumu temizle
            fetch('/Account/Logout', { method: 'POST' }) // Çıkış işlemi için gerekli URL'yi buraya eklemelisiniz
                .then(response => {
                    if (response.ok) {
                        // Başarılı çıkış durumunda yapılacak işlemler
                        window.location.href = 'https://localhost:7179/Account/Login'; // Giriş sayfasına yönlendir
                    }
                });
        });
    </script>



    <script src="\admin\plugins\bootstrap\js\bootstrap.bundle.min.js"></script>


    <!-- AdminLTE -->
    <script src="\admin\dist\js\adminlte.js"></script>

    <!-- OPTIONAL SCRIPTS -->

    <script src="\admin\plugins\chart.js\chart.min.js"></script>
    <script src="\admin\dist\js\demo.js"></script>
    <script src="\admin\dist\js\pages\dashboard3.js"></script>
</body>
</html>
